#include <stdio.h>
#include <time.h>
#include <stdlib.h>

#define size 10

void quick_sort (int a[], int left, int right);

int main(void)
{
    int a[size];

    srand(time(NULL));

    for (int i = 0; i < size; i++)
    {
        a[i] = rand() % 100;

        printf(" %d ", a[i]);
    }
    printf("\n\n");

    quick_sort(a, 0, size - 1);

    for (int i = 0; i < size; i++)
    {
        printf(" %d ", a[i]);
    }
}

void quick_sort (int a[], int left, int right)
{
    int begin = left;
    int end = right;
    int tmp = a[left];

    while (left < right)
    {
        while ((left < right) && (a[right] >= tmp))
        {
            right--;
        }
        if (left != right)
        {
            a[left] = a[right];
            left++;
        }
        while ((a[left] <= tmp) && (left < right))
            left++;
        if (left != right)
        {
            a[right] = a[left];
            right--;
        }
    }

    a[left] = tmp;
    tmp = left;
    left = begin;
    right = end;

    if (left < tmp)
    {
      quick_sort(a, left, tmp - 1);
    }

    if (right > tmp)
    {
      quick_sort(a, tmp + 1, right);
    }
}
