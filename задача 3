#include <stdio.h>
#include <time.h>
#include <stdlib.h>

#define size 10

void quick_sort (int a[], int left, int right);

int main(void)
{
    int a[size];

    srand(time(NULL));

    for (int i = 0; i < size; i++)
    {
        a[i] = rand() % 100;

        printf(" %d ", a[i]);
    }
    printf("\n\n");

    quick_sort(a, 0, size - 1);

    for (int i = 0; i < size; i++)
    {
        printf(" %d ", a[i]);
    }
}

void quick_sort (int a[], int left, int right)
{
    int left_hold = left;
    int right_hold = right;
    int cache = a[left];

    while (left < right)
    {
        while ((a[right] >= cache) && (left < right))
        {
            right--;
        }
        if (left != right)
        {
            a[left] = a[right];
            left++;
        }
        while ((a[left] <= cache) && (left < right))
            left++;
        if (left != right)
        {
            a[right] = a[left];
            right--;
        }
    }

    a[left] = cache;
    cache = left;
    left = left_hold;
    right = right_hold;

    if (left < cache)
        quick_sort(a, left, cache - 1);

    if (right > cache)
        quick_sort(a, cache + 1, right);
}
