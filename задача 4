#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define size 10

int max(int a[]);
int min(int a[]);
float middle(int a[]);
int mediana(int a[]);

int main ()
{
  int a[size];

  srand(time(NULL));

  for (int i = 0; i < size; i++)
  {
    a[i] = rand() % 100;
    printf("%d ", a[i]);
  }
  
  FILE* file;
  file = fopen ("C:\\Users\\1\\Desktop\\Домашние задания готовые\\lab3\\ayetatar.txt", "r");

  if (file == 0)
  {
    printf ("Error");
  }

  else
  {
    for (int i = 0; i < size; i++)
    {
      fscanf(file, "%d", &a[i]);
    }

    fclose (file);
  }

  file = fopen ("C:\\Users\\1\\Desktop\\Домашние задания готовые\\lab3\\ayetatar.txt", "a");

  fprintf (file, "Maximal number in the array = %d\n", max(a));
  fprintf (file, "Minimal number in the array = %d\n", min(a));
  fprintf (file, "Middle number in the array = %.1f\n", middle(a));
  fprintf (file, "Median of the array = %d\n", mediana(a));

  fclose (file);

  return 0;
}

int min(int a[])
{
  int min = a[0];

  for (int i = 1; i < size; i++)
  {
    if (a[i] < min)
    {
      min = a[i];
    }
  }

  return min;
}

int max(int a[])
{
  int max = a[0];

  for (int i = 1; i < size; i++)
  {
    if (a[i] > max)
    {
      max = a[i];
    }
  }

  return max;
}

float middle(int a[])
{
  double middle = 0;

  for (int i = 0; i < size; i++)
  {
    middle += a[i];
  }

  return middle / size;
}

int mediana(int a[])
{
  for (int i = 0; i < size - 1; i++)
  {
    for (int i = 0; i < size - i - 1; i++)
    {
      if (a[i] > a[i + 1])
      {
        a[i] = a[i] + a[i + 1];
        a[i + 1] = a[i] - a[i + 1];
        a[i] = a[i] - a[i + 1];
      }
    }
  }

  if (size % 2 != 0)
  {
    return a[size / 2];
  }

  else
  {
    return (a[size / 2] + a[size / 2 - 1]) / 2;
  }
}
