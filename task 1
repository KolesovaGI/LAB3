#include <stdio.h>
#include <time.h>
#include <stdlib.h>

#define size 10

short maximal(int a[]);
short minimum(int a[]);
double average(int a[]);
short median(int a[]);

short maximal(int a[])
{
  int maximal = a[0];

  for (int i = 1; i < size; i++)
  {
    if (a[i] > maximal)
    {
      maximal = a[i];
    }
  }

  return maximal;
}

short minimum(int a[])
{
  int minimum = a[0];

  for (int i = 1; i < size; i++)
  {
    if (a[i] < minimum)
    {
      minimum = a[i];
    }
  }

  return minimum;
}

double average(int a[])
{
  double average = 0;

  for (int i = 0; i < size; i++)
  {
    average += a[i];
  }

  return average / size;
}

short median(int a[])
{
  for (int i = 0; i < size - 1; i++)
  {
    for (int q = 0; q < size - i - 1; q++)
    {
      if (a[q] > a[q + 1])
      {
        a[q] = a[q] + a[q + 1];
        a[q + 1] = a[q] - a[q + 1];
        a[q] = a[q] - a[q + 1];
      }
  }
}

  if (size % 2 != 0)
  {
    return a[size / 2];
  }

  else
  {
    return (a[size / 2] + a[size / 2 - 1]) / 2;
  }
}

int main(void)
{
  int a[size];

  srand(time(NULL));

  for (int q = 0; q < size; q++)
  {
    a[q] = rand() % 100;
    printf("%d ", a[q]);
  }

  printf("\n\n");
  printf("Maximal digit = %d\n\n", maximal(a));
  printf("Minimal digit = %d\n\n", minimum(a));
  printf("Average digit = %.3lf\n\n", average(a));
  printf("Median = %d\n\n", median(a));
}
