#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define size 10

int max (int a[]);

int main (void)
{
  int a[size];
  int i;

  srand (time (NULL));

  for (i = 0; i < size; i++)
  {
    a[i] = rand () % 100;

    printf ("%d ", a[i]);
  }

  printf ("\n");
  printf("Maximal of this array = %d\n", max(a));
}

int max (int a[])
{
  int max = a[0];
  
  for (int i = 0; i < size; i++)
  {
    if (a[i] > max)
    {
      max = a[i];
    }
  }

  return max;
}
