#include <stdio.h>
#include <time.h>
#include <stdlib.h>

#define size 10

int max(int a[]);
int min(int a[]);
float middle(int a[]);
int mediana(int a[]);

int main(void)
{
  int a[size];

  srand(time(NULL));

  for (int i = 0; i < size; i++)
  {
    a[i] = rand() % 100;
    printf("%d ", a[i]);
  }

  printf("\n\n");
  printf("Maximal number in the array = %d\n", max(a));
  printf("Minimal number in the array = %d\n", min(a));
  printf("Middle number in the array = %.1f\n", middle(a));
  printf("Median of the array = %d\n", mediana(a));
}

int min(int a[])
{
  int min = a[0];

  for (int i = 1; i < size; i++)
  {
    if (a[i] < min)
    {
      min = a[i];
    }
  }

  return min;
}

int max(int a[])
{
  int max = a[0];

  for (int i = 1; i < size; i++)
  {
    if (a[i] > max)
    {
      max = a[i];
    }
  }

  return max;
}

float middle(int a[])
{
  double middle = 0;

  for (int i = 0; i < size; i++)
  {
    middle += a[i];
  }

  return middle / size;
}

int mediana(int a[])
{
  for (int i = 0; i < size - 1; i++)
  {
    for (int q = 0; q < size - i - 1; q++)
    {
      if (a[q] > a[q + 1])
      {
        a[q] = a[q] + a[q + 1];
        a[q + 1] = a[q] - a[q + 1];
        a[q] = a[q] - a[q + 1];
      }
    }
  }

  if (size % 2 != 0)
  {
    return a[size / 2];
  }

  else
  {
    return (a[size / 2] + a[size / 2 - 1]) / 2;
  }
}
